%header
  .container
    =link_to root_path do
      .app-logo=image_tag partial_logo, alt: 'broadcast logo'
    %nav.top-navbar
      .nav-js-trigger
        .nav-icon
      %ul
        %li=link_to t('navbar.residents'), new_user_path
        %li=link_to t('navbar.government'), '#'
        %li=link_to t('navbar.about'), root_path(:anchor => "description-jump")
        %li{class: "#{I18n.locale == :en ?  'lang-active' : 'lang'}"}
          =link_to 'EN', { :locale=>'en' }
        %li{class: "#{I18n.locale == :es ?  'lang-active' : 'lang'}"}
          =link_to 'ES', { :locale=>'es' }
