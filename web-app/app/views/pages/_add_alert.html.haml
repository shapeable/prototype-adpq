.dashboard-section
  .dashboard-titles
    %h2 New Emergency Alert
    - content_for :breadcrumbs do
      %li
        =link_to '#' do
          %h5 Alert Categories
      %li
        =link_to '#' do
          %h5 Real Time Alert and Forecast
      %li
        =link_to '#' do
          %h5 New Emergency
  %form.custom-form
    .form-option
      %p Alert Name:
      .custom-text-input
        %input{type: 'text'}
    .form-option
      %p Emergency Cause:
      .custom-text-input
        %input{type: 'text'}
    .form-option
      %p Call to Action:
      .custom-text-input
        %input{type: 'text'}
    .form-option
      %p Information Source:
      .custom-select
        %select
          %option Dept of interior IGEMS
          %option Other
    .form-option
      %p URL:
      .custom-text-input
        %input{type: 'text'}
      .reference-info
        %span You can find this information in the following link:
        =link_to 'https://idpgis.ncep.noaa.gov/arcgis/rest/sercives'
    .form-option
      %p Important Links:
      .custom-text-input
        %input{type: 'text'}
    %button.third-button Create Emergency Alert
